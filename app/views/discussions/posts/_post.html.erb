<%= turbo_frame_tag dom_id post do %>
  <div class="card my-4">
    <div class="card-body">
      <%= render "discussions/posts/header", post: post %>

      <%= post.body %>
    </div>
    <div class="card-footer">
      <%= link_to "Edit", edit_discussion_post_path(post.discussion, post), data: { turbo_frame: dom_id(post) } %> | 
      <%= link_to "Delete", discussion_post_path(post.discussion, post), method: :delete, class: "text-danger", data: { turbo_frame: dom_id(post), confirm: "Are you sure?" } %>
    </div>
  </div>
<% end %>